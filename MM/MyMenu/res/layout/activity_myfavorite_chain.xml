<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/comment_bg_light" >

    <RelativeLayout
        android:id="@+id/myfavorite_chain_list_re_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:background="@color/comment_bg_dark"
        android:padding="5dp" >

        <LinearLayout
            android:id="@+id/myfavorite_chain_ll_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:onClick="onClick_backpress"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/myfavorite_chain_list_ic_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:contentDescription="@string/common_description"
                android:background="@drawable/ic_restaurant_details_favorite" />

            <TextView
                android:id="@+id/myfavorite_chain_list_tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/common_my_favorites"
                android:textColor="@color/White"
                android:textSize="14sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/myfavorite_chain_list_ic"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_centerInParent="true"
            android:layout_marginLeft="3dp"
            android:contentDescription="@string/common_description" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/myfavorite_chain_list_re_search"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/myfavorite_chain_list_re_title" >
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/myfavorite_chain_list_re_sort"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/myfavorite_chain_list_re_search"
        android:layout_centerHorizontal="true"
        android:background="@color/comment_bg_dark"
        android:padding="5dp" >

        <RelativeLayout
            android:id="@+id/myfavorite_rl_sort_alphabet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true" >

            <TextView
                android:id="@+id/myfavorite_chain_sortAphabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:layout_toRightOf="@id/tv_lb_sort"
                android:text="@string/sort_az"
                android:textColor="@color/White"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/myfavorite_chain_iv_status_sortAphabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:visibility="invisible"
                android:layout_toRightOf="@id/myfavorite_chain_sortAphabel"
                android:background="@drawable/ic_arrow_down"
                android:contentDescription="@string/common_description" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/myfavorite_chain_iv_status_sortAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:visibility="invisible"
            android:background="@drawable/ic_arrow_down"
            android:contentDescription="@string/common_description" />

        <TextView
            android:id="@+id/myfavorite_chain_sortAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@id/myfavorite_chain_iv_status_sortAmount"
            android:contentDescription="@string/common_description"
            android:text="@string/common_lb_amount"
            android:textColor="@color/White"
            android:textSize="16sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/myfavorite_chain_list_re_list"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/myfavorite_chain_list_re_sort" >

        <ListView
            android:id="@+id/myfavorite_chain_list_lv"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@color/comment_bg_light"
            android:cacheColorHint="@color/bg"
            android:divider="@color/comment_color_list_deliver"
            android:dividerHeight="1dp"
            android:padding="10dp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" >

        <LinearLayout
            android:id="@+id/optionmenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" >

            <com.magrabbit.intelligentmenu.customview.OptionMenu
                android:id="@+id/optionMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/comment_bg_light"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/activity_mypoint_share_layout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:background="@color/comment_bg_dark"
            android:padding="5dp" >

            <LinearLayout
                android:id="@+id/activity_mypoint_share_layout_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="5dp"
                android:gravity="center_horizontal"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/activity_mypoint_share_icon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="5dp"
                    android:contentDescription="@string/common_description"
                    android:src="@drawable/ic_mypoint_logo" />

                <TextView
                    android:id="@+id/activity_mypoint_share_tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/mypoint"
                    android:textColor="@color/White"
                    android:textSize="20sp" />
            </LinearLayout>

            <!-- Restaurant Status and Point -->

            <LinearLayout
                android:id="@+id/activity_mypoint_share_layout_point"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="5dp"
                android:background="@drawable/mypoint_shape"
                android:gravity="center_horizontal"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/activity_mypoint_share_tv_point"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/White"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/activity_mypoint_share_tv_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:textColor="@color/White"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <!-- Restaurnt information including address and logo -->

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@id/activity_mypoint_share_layout_point"
                android:layout_toRightOf="@id/activity_mypoint_share_layout_icon"
                android:gravity="center_horizontal"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/activity_mypoint_share_restaurant_logo"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/activity_mypoint_share_tv_nameRestaurant"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:textColor="@color/White"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/activity_mypoint_share_tv_streetRestaurant"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:textColor="@color/White"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/activity_mypoint_share_tv_stateRestaurant"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:textColor="@color/White"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/activity_mypoint_share_layout_button"
            android:layout_below="@+id/activity_mypoint_share_layout1"
            android:layout_marginTop="10dp" >

            <LinearLayout
                android:id="@+id/activity_mypoint_share_layout_value_point"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:gravity="center"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/activity_mypoint_share_tv_transferPoint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/activity_mypoint_share_tv_transferPoint"
                    android:textColor="@color/Yellow"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/activity_mypoint_share_edt_pointShared"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edittext_selector"
                    android:gravity="center_horizontal|center_vertical"
                    android:hint="@string/activity_mypoint_share_hint_point"
                    android:inputType="number"
                    android:textColor="@color/Black" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal" >

                    <Button
                        android:id="@+id/activity_point_share_bt_sms"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/ic_mypoint_share_sms"
                        android:textColor="@color/White" />

                    <TextView
                        android:id="@+id/activity_mypoint_share_edt_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_toLeftOf="@+id/activity_mypoint_share_cbx_SMS"
                        android:layout_toRightOf="@+id/activity_point_share_bt_sms"
                        android:background="@drawable/edittext_selector"
                        android:ems="10"
                        android:gravity="center"
                        android:hint="@string/activity_mypoint_share_hint_phone"
                        android:singleLine="true"
                        android:textSize="16sp" />

                    <RadioButton
                        android:id="@+id/activity_mypoint_share_cbx_SMS"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:checked="false" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp" >

                    <Button
                        android:id="@+id/activity_point_share_bt_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/ic_mypoint_share_email"
                        android:textColor="@color/White" />

                    <TextView
                        android:id="@+id/activity_mypoint_share_email"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_toLeftOf="@+id/activity_mypoint_share_cbx_Email"
                        android:layout_toRightOf="@+id/activity_point_share_bt_email"
                        android:background="@drawable/edittext_selector"
                        android:ems="10"
                        android:gravity="center"
                        android:hint="@string/activity_mypoint_share_hint_email"
                        android:singleLine="true"
                        android:textSize="16sp" />

                    <RadioButton
                        android:id="@+id/activity_mypoint_share_cbx_Email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:checked="false" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/activity_mypoint_share_layout_value_point"
                android:layout_marginTop="10dp" >

                <ExpandableListView
                    android:id="@+id/activity_mypoint_share_lv_Expandable"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/comment_bg_light"
                    android:cacheColorHint="@color/comment_bg_light"
                    android:groupIndicator="@android:color/transparent"
                    android:padding="5dp" />
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/activity_mypoint_share_layout_button"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp" >

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:background="@drawable/button_cancel"
                android:onClick="onClick_Cancel"
                android:text="@string/cancel"
                android:textColor="@color/White"
                android:textStyle="bold" />

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="30dp"
                android:layout_weight="1"
                android:background="@drawable/button_submit"
                android:onClick="onClick_Share"
                android:text="@string/share"
                android:textColor="@color/White"
                android:textStyle="bold" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" >

        <LinearLayout
            android:id="@+id/optionmenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" >

            <com.magrabbit.intelligentmenu.customview.OptionMenu
                android:id="@+id/optionMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
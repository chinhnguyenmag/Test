<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/comment_bg_light" >

    <RelativeLayout
        android:id="@+id/mynotification_list_re_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@color/comment_bg_dark"
        android:padding="10dp" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true" >

            <ImageView
                android:id="@+id/mynotification_list_ic_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:contentDescription="@string/common_description"
                android:onClick="onClick_back"
                android:src="@drawable/ic_mynotification_title" />

            <TextView
                android:id="@+id/mynotification_list_tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_toRightOf="@id/mynotification_list_ic_title"
                android:text="MyNotifications"
                android:textColor="@color/White"
                android:textSize="20sp" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/mynotification_list_re_search"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/mynotification_list_re_title" >
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/mynotification_list_re_sort"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/mynotification_list_re_search"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:background="@color/comment_bg_dark"
        android:padding="5dp" >

        <TextView
            android:id="@+id/mynotification_sortAphabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="9dp"
            android:text="@string/sort_az"
            android:textColor="@color/White"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/mynotification_iv_status_sortAphabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/mynotification_sortAphabel"
            android:background="@drawable/ic_arrow_down"
            android:contentDescription="@string/common_description"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/mynotification_iv_status_sortAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:background="@drawable/ic_arrow_up"
            android:contentDescription="@string/common_description"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/mynotification_sortAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@id/mynotification_iv_status_sortAmount"
            android:contentDescription="@string/common_description"
            android:text="@string/sort_amount"
            android:textColor="@color/White"
            android:textSize="16sp" />


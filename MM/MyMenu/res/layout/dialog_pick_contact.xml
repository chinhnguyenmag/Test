<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" >

            <EditText
                android:id="@+id/dialog_pick_contact_edtSearch"
                style="@style/editText_custom"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@android:drawable/ic_search_category_default"
                android:gravity="center_vertical"
                android:hint="Contact Search"
                android:singleLine="true" />
        </LinearLayout>

        <ListView
            android:id="@+id/dialog_pick_contact_lv_contacts"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:cacheColorHint="@color/transparent"
            android:divider="@color/White"
            android:dividerHeight="1dp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="5dp" >

            <Button
                android:id="@+id/dialog_pick_contact_bt_cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_cancel"
                android:padding="5dp"
                android:text="@string/cancel"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/White" />

            <Button
                android:id="@+id/dialog_pick_contact_bt_new"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/button_submit"
                android:padding="5dp"
                android:text="@string/new_contact"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/White" />

            <Button
                android:id="@+id/dialog_pick_contact_bt_ok"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_submit"
                android:padding="5dp"
                android:text="@string/ok"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/White" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
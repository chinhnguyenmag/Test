    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/bg_line" >
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" >

        <TextView
            android:id="@+id/my_order_tv_subtotal"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="25dp"
            android:gravity="right"
            android:singleLine="true"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/White" />

        <TextView
            android:id="@+id/tv_subtotal"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="25dp"
            android:layout_toLeftOf="@id/my_order_tv_subtotal"
            android:text="@string/my_order_subtotal"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/White" />

        <TextView
            android:id="@+id/my_order_tv_tax"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/my_order_tv_subtotal"
            android:layout_marginRight="25dp"
            android:layout_marginTop="1dp"
            android:gravity="right"
            android:singleLine="true"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/White" />

        <TextView
            android:id="@+id/tv_tax"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/my_order_tv_subtotal"
            android:layout_marginRight="25dp"
            android:layout_marginTop="1dp"
            android:layout_toLeftOf="@id/my_order_tv_tax"
            android:gravity="left"
            android:text="@string/my_order_tax"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/White" />

        <LinearLayout
            android:id="@+id/my_order_ll_edit_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/my_order_tv_tax"
            android:layout_marginBottom="5dp" >

            <ImageButton
                android:id="@+id/my_order_bt_done_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_done"
                android:onClick="onClick_DoneTip"
                android:visibility="gone" />

            <ImageButton
                android:id="@+id/my_order_bt_edit_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_edit"
                android:onClick="onClick_EditTip"
                android:visibility="visible" />
        </LinearLayout>

        <TextView
            android:id="@+id/my_order_tv_tip"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/my_order_tv_tax"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:layout_toLeftOf="@id/my_order_ll_edit_tip"
            android:gravity="right"
            android:singleLine="true"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/White" />

        <TextView
            android:id="@+id/my_order_tv_tip_percent"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/my_order_tv_tax"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:layout_toLeftOf="@id/my_order_tv_tip"
            android:gravity="right"
            android:singleLine="true"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/White" />

        <ImageButton
            android:id="@+id/my_order_bt_minus_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/my_order_tv_tax"
            android:layout_marginTop="2dp"
            android:layout_toLeftOf="@id/my_order_tv_tip_percent"
            android:background="@drawable/button_minus_order"
            android:onClick="onClick_MinusTip" />

        <TextView
            android:id="@+id/tv_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/my_order_tv_tax"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:layout_toLeftOf="@id/my_order_bt_minus_tip"
            android:gravity="left"
            android:text="@string/my_order_tip"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/White" />

        <ImageButton
            android:id="@+id/my_order_bt_add_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/my_order_tv_tax"
            android:layout_marginRight="5dp"
            android:layout_marginTop="2dp"
            android:layout_toLeftOf="@id/tv_tip"
            android:background="@drawable/button_plus_order"
            android:onClick="onClick_AddTip" />

        <TextView
            android:id="@+id/my_order_tv_total"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/my_order_tv_tip"
            android:layout_marginRight="5dp"
            android:layout_marginTop="8dp"
            android:layout_toLeftOf="@id/my_order_ll_edit_tip"
            android:gravity="right"
            android:singleLine="true"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/White" />

        <TextView
            android:id="@+id/tv_total"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_tip"
            android:layout_marginRight="22dp"
            android:layout_marginTop="8dp"
            android:layout_toLeftOf="@id/my_order_tv_total"
            android:gravity="left"
            android:text="@string/my_order_total"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/White" />

        <EditText
            android:id="@+id/my_order_et_tip"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_below="@id/my_order_tv_tax"
            android:layout_marginRight="5dp"
            android:layout_marginTop="2dp"
            android:layout_toLeftOf="@id/my_order_ll_edit_tip"
            android:ems="3"
            android:inputType="numberDecimal"
            android:maxLength="6"
            android:textAppearance="?android:attr/textAppearanceSmallInverse"
            android:visibility="gone" >

            <requestFocus />
        </EditText>

        <RelativeLayout
            android:id="@+id/activity_my_order_layout_server"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@id/my_order_bt_add_tip"
            android:visibility="invisible" >

            <RelativeLayout
                android:id="@+id/my_order_rl_avatar_server"
                android:layout_width="80dp"
                android:layout_height="100dp" >

                <ImageView
                    android:id="@+id/activity_my_order_iv_avatar_default"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_default_avatar" />

                <android.support.v4.view.ViewPager
                    android:id="@+id/activity_my_order_viewpager_avatar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <ImageButton
                    android:id="@+id/activity_my_order_ibt_favourite"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="1dp"
                    android:background="@drawable/button_myorder_favourite"
                    android:onClick="onClick_AddServerFavourite" />

                <ImageButton
                    android:id="@+id/activity_my_order_ibt_rating"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="1dp"
                    android:background="@drawable/button_myorder_rating"
                    android:onClick="onClick_ServerRating" />

                <ImageButton
                    android:id="@+id/activity_my_order_ibt_share"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/button_myorder_share"
                    android:onClick="onClick_ServerShare" />

                <ImageButton
                    android:id="@+id/activity_my_order_ibt_chooseServer"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/button_myorder_choose_server"
                    android:onClick="onClick_ServerChoose"
                    android:visibility="gone" />
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/bg_line" >
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp" >

        <Button
            android:id="@+id/my_order_bt_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/button_cancel"
            android:onClick="onClick_Cancel"
            android:text="@string/cancel"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/White"
            android:textStyle="bold" />

        <Button
            android:id="@+id/my_order_bt_order"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/button_submit"
            android:onClick="onClick_Order"
            android:text="@string/my_order_order"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/White"
            android:textStyle="bold" />

        <FrameLayout
            android:id="@+id/details_restaurant_fl_pay"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="onClick_Pay"
            android:background="@drawable/button_pay_order"
            android:clickable="true" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:drawableLeft="@drawable/ic_btn_money"
                android:gravity="center"
                android:text="@string/my_order_pay"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/White"
                android:textStyle="bold" />
        </FrameLayout>
    </LinearLayout>

</LinearLayout>
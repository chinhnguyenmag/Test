<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="#1b1d1f"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/details_restaurant_header"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#16191a"
        android:padding="5dp" >

        <ImageView
            android:id="@+id/my_order_iv_logo"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:contentDescription="@string/details_restaurant_logo" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@id/my_order_iv_logo"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/my_order_iv_avatar"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_default_avatar" />

            <TextView
                android:id="@+id/my_order_tv_name_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/White" />

            <TextView
                android:id="@+id/my_order_tv_point"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/my_order_tv_name_user"
                android:layout_marginTop="5dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/White" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/my_order_iv_logo" >

            <TextView
                android:id="@+id/my_order_lb_store"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="@string/my_order_store"
                android:textColor="@color/White"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/my_order_tv_store"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_toRightOf="@id/my_order_lb_store"
                android:textColor="@color/White"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/my_order_lb_receipt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/my_order_lb_store"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:text="@string/my_order_receipt"
                android:textColor="@color/White"
                android:textSize="12sp"
                android:textStyle="" />

            <TextView
                android:id="@+id/my_order_tv_receipt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/my_order_lb_store"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/my_order_lb_receipt"
                android:textColor="@color/White"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/my_order_lb_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/my_order_tv_receipt"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:text="@string/my_order_time"
                android:textColor="@color/White"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/my_order_tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/my_order_tv_receipt"
                android:layout_marginLeft="1dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/my_order_lb_time"
                android:textColor="@color/White"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/my_order_lb_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/my_order_lb_time"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:text="@string/my_order_date"
                android:textColor="@color/White"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/my_order_tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/my_order_lb_time"
                android:layout_marginLeft="1dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/my_order_lb_date"
                android:textColor="@color/White"
                android:textSize="12sp" />
        </RelativeLayout>
    </RelativeLayout>

    <ListView
        android:id="@+id/my_order_lv_item"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="1"
        android:cacheColorHint="@color/transparent"
        android:divider="@color/White"
        android:dividerHeight="1dp" >
    </ListView>


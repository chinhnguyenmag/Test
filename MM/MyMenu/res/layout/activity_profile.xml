<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/bg" >

    <include
        android:id="@+id/profile_top"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        layout="@layout/header" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/profile_top" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="20dp" >

            <ImageView
                android:id="@+id/profile_iv_avatar"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentLeft="true"
                android:clickable="true"
                android:contentDescription="@string/profile_avatar"
                android:onClick="onClick_Avatar"
                android:src="@drawable/ic_photo_profile" />

            <LinearLayout
                android:id="@+id/profile_ll_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/profile_iv_avatar"
                android:orientation="vertical" >

                <EditText
                    android:id="@+id/profile_et_first_name"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/edittext_selector"
                    android:ems="10"
                    android:hint="@string/profile_first_name"
                    android:inputType="textPersonName"
                    android:paddingLeft="20dp"
                    android:singleLine="true"
                    android:textColor="@color/Black" >

                    <requestFocus />
                </EditText>

                <EditText
                    android:id="@+id/profile_et_last_name"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/edittext_selector"
                    android:ems="10"
                    android:hint="@string/profile_last_name"
                    android:inputType="textPersonName"
                    android:paddingLeft="20dp"
                    android:singleLine="true"
                    android:textColor="@color/Black" />
            </LinearLayout>

            <EditText
                android:id="@+id/profile_et_zip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/profile_ll_name"
                android:layout_centerInParent="true"
                android:layout_marginTop="40dp"
                android:background="@drawable/edittext_selector"
                android:ellipsize="end"
                android:ems="6"
                android:gravity="center"
                android:hint="@string/profile_zip"
                android:inputType="number"
                android:maxLength="5"
                android:singleLine="true"
                android:textColor="@color/Black" />

            <EditText
                android:id="@+id/profile_et_email"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/profile_et_zip"
                android:layout_marginTop="10dp"
                android:background="@drawable/edittext_selector"
                android:ems="10"
                android:hint="@string/profile_email_adress"
                android:inputType="textEmailAddress"
                android:paddingLeft="20dp"
                android:singleLine="true"
                android:textColor="@color/Black" />

            <EditText
                android:id="@+id/profile_et_user_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/profile_et_email"
                android:layout_marginTop="10dp"
                android:background="@drawable/edittext_selector"
                android:ems="10"
                android:hint="@string/profile_user_name"
                android:maxLength="30"
                android:paddingLeft="20dp"
                android:singleLine="true"
                android:textColor="@color/Black" />

            <EditText
                android:id="@+id/profile_et_password"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/profile_et_user_name"
                android:layout_marginTop="10dp"
                android:background="@drawable/edittext_selector"
                android:ems="10"
                android:hint="@string/profile_password"
                android:inputType="textPassword"
                android:maxLength="50"
                android:paddingLeft="20dp"
                android:singleLine="true"
                android:textColor="@color/Black" />

            <EditText
                android:id="@+id/profile_et_confirm_password"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/profile_et_password"
                android:layout_marginTop="10dp"
                android:background="@drawable/edittext_selector"
                android:ems="10"
                android:hint="@string/profile_confirm_password"
                android:inputType="textPassword"
                android:maxLength="50"
                android:paddingLeft="20dp"
                android:singleLine="true"
                android:textColor="@color/Black" />

            <CheckBox
                android:id="@+id/profile_cb_confirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/profile_et_confirm_password"
                android:layout_marginTop="10dp"
                android:visibility="gone"
                android:paddingLeft="10dp"
                android:textColor="@color/White" />

            <TextView
                android:id="@+id/profile_tv_terms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_below="@id/profile_et_confirm_password"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@id/profile_cb_confirm"
                android:text="@string/profile_terms"
                android:textColor="@color/White" />

            <TextView
                android:id="@+id/profile_tv_online"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_below="@id/profile_tv_terms"
                android:layout_toRightOf="@id/profile_cb_confirm"
                android:layout_marginTop="10dp"
                android:text="@string/profile_online"
                android:textColor="@color/White" />

            <Button
                android:id="@+id/profile_bt_submit"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/profile_et_confirm_password"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:background="@drawable/button_submit"
                android:onClick="onClick_Submit"
                android:text="@string/submit"
                android:textColor="@android:color/white" />
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/myfavorite_global_list_ib_sort_distance"
            android:background="@drawable/ic_sortaz"
            android:onClick="onClick_sortByAnphabel"
            android:contentDescription="@string/common_description" />

        <ImageButton
            android:id="@+id/myfavorite_global_list_ib_sort_datetime"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentTop="true"
            android:layout_marginRight="20dp"
            android:layout_toLeftOf="@+id/myfavorite_global_list_ib_sort_distance"
            android:background="@drawable/ic_sort_date"
            android:onClick="onClick_sortByDate"
            android:contentDescription="@string/common_description" />
        -->
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/myfavorite_global_list_re_list"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/myfavorite_global_list_re_sort">

        <ListView
            android:id="@+id/myfavorite_global_list_lv"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_centerHorizontal="true"
            android:background="@color/comment_bg_light"
            android:cacheColorHint="@color/comment_bg_light"
            android:divider="@color/comment_color_list_deliver"
            android:dividerHeight="1dp"
            android:padding="10dp" />

    </RelativeLayout>
    
     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" >

        <LinearLayout
            android:id="@+id/optionmenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" >

            <com.magrabbit.intelligentmenu.customview.OptionMenu
                android:id="@+id/optionMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
    

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp" >

    <LinearLayout
        android:id="@+id/profile_item_layout1"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/profile_item_imbt_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_add_button" />

        <TextView
            android:id="@+id/profile_item_tv_profileName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="@string/nameTest"
            android:textSize="18sp"
            android:textColor="@color/White"
            android:textStyle="bold" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/profile_item_imbt_delete"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/ic_delete" />

    <RadioButton
        android:id="@+id/profile_item_rbt_default"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@id/profile_item_imbt_delete"
        android:layout_toRightOf="@id/profile_item_layout1" />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/comment_bg_light" >

    <LinearLayout
        android:id="@+id/mynotification_restaurant_list_re_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:background="@color/comment_bg_dark"
        android:padding="10dp" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/mynotification_restaurant_list_ic_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:contentDescription="@string/common_description"
                android:onClick="onClick_back"
                android:src="@drawable/ic_mynotification_title" />

            <TextView
                android:id="@+id/mynotification_restaurant_list_tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="MyNotifications"
                android:textColor="@color/White"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/mynotification_restaurant_list_ic_logo"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal"
                android:contentDescription="@string/common_description" />

            <TextView
                android:id="@+id/mynotification_restaurant_store_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:textColor="@color/White"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/mynotification_restaurant_store_street"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:textColor="@color/White"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/mynotification_restaurant_store_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/White"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/mypoint_shape"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/mynotification_restaurant_total_new_msg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textColor="#1b88cc"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:text="New"
                    android:textColor="@color/White"
                    android:textSize="10sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/mynotification_restaurant_lb_new_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Notification"
                android:textColor="@color/White"
                android:textSize="10sp" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/mynotification_restaurant_list_re_search"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/mynotification_restaurant_list_re_title" >
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/mynotification_restaurant_list_re_sort"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/mynotification_restaurant_list_re_search"
        android:layout_centerHorizontal="true"
        android:background="@color/comment_bg_dark"
        android:padding="5dp" >

        <RelativeLayout
            android:id="@+id/mynotification_message_sort_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/mynotification_restaurant_sortType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:contentDescription="@string/common_description"
                android:text="Type"
                android:textColor="@color/White"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/mynotification_restaurant_iv_status_sortType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:visibility="invisible"
                android:layout_toRightOf="@id/mynotification_restaurant_sortType"
                android:background="@drawable/ic_arrow_down"
                android:contentDescription="@string/common_description" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/mynotification_restaurant_iv_status_sortDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:visibility="invisible"
            android:background="@drawable/ic_arrow_down"
            android:contentDescription="@string/common_description" />

        <TextView
            android:id="@+id/mynotification_restaurant_sortDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@id/mynotification_restaurant_iv_status_sortDate"
            android:contentDescription="@string/common_description"
            android:text="Date"
            android:textColor="@color/White"
            android:textSize="16sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/mynotification_restaurant_list_re_list"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/mynotification_restaurant_list_re_sort" >

        <ListView
            android:id="@+id/mynotification_restaurant_list_lv"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@color/comment_bg_light"
            android:cacheColorHint="@color/bg"
            android:divider="@color/comment_color_list_deliver"
            android:dividerHeight="1dp"
            android:padding="10dp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" >

        <LinearLayout
            android:id="@+id/optionmenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" >

            <com.magrabbit.intelligentmenu.customview.OptionMenu
                android:id="@+id/optionMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/listview_selector"
    android:focusable="false"
    android:padding="5dp" >

    <LinearLayout
        android:id="@+id/mysearch_profile_item_layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@+id/mysearch_profile_item_layout_button"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/mysearch_profile_item_imbt_edit"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/ic_edit"
            android:focusable="false" />

        <TextView
            android:id="@+id/mysearch_profile_item_tv_profileName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:ellipsize="end"
            android:focusableInTouchMode="false"
            android:gravity="center_vertical"
            android:lines="2"
            android:textColor="@color/White"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/mysearch_profile_item_layout_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/mysearch_profile_item_rbt_default"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:checked="false"
            android:focusable="false"
            android:focusableInTouchMode="false" />

        <Button
            android:id="@+id/mysearch_profile_item_imbt_delete"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/ic_delete"
            android:focusable="false"
            android:focusableInTouchMode="false" />
    </LinearLayout>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/Black" >

    <ImageView
        android:id="@+id/details_restaurant_iv_img_default"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ic_load_img_500"
        android:contentDescription="@string/details_restaurant_logo" />

    <android.support.v4.view.ViewPager
        android:id="@+id/activity_my_order_viewpager_avatar"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:id="@+id/details_restaurant_slider_top"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/bg_slider"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" >

        <Button
            android:id="@+id/details_restaurant_bt_favorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:background="@drawable/button_restaurant_details_favorite"
            android:onClick="onClick_Favorite" />

        <Button
            android:id="@+id/details_restaurant_bt_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/button_restaurant_details_rate"
            android:onClick="onClick_Rating" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg_slider"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" >

        <Button
            android:id="@+id/details_restaurant_bt_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:background="@drawable/button_restaurant_details_share"
            android:onClick="onClick_Share" />

        <!--
             <com.viewpagerindicator.CirclePageIndicator
            android:id="@+id/details_restaurant_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:padding="10dp" />
        -->

        <com.viewpagerindicator.LinePageIndicator
            android:id="@+id/details_restaurant_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:padding="10dp"
            app:lineWidth="10dp"
            app:selectedColor="#bab134"
            app:strokeWidth="10dp"
            app:unselectedColor="#666666" />
    </RelativeLayout>

</RelativeLayout>
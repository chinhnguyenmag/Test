<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg" >

    <android.support.v4.view.ViewPager
        android:id="@+id/details_restaurant_thumbnail_land_vp_photos"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg_slider"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" >

        <!-- <com.viewpagerindicator.CirclePageIndicator -->
        <!-- android:id="@+id/details_restaurant_thumbnail_land_indicator" -->
        <!-- android:layout_width="wrap_content" -->
        <!-- android:layout_height="wrap_content" -->
        <!-- android:layout_centerHorizontal="true" -->
        <!-- android:padding="10dp" /> -->

        <com.viewpagerindicator.LinePageIndicator
            android:id="@+id/details_restaurant_thumbnail_land_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:padding="10dp"
            app:lineWidth="10dp"
            app:selectedColor="#bab134"
            app:strokeWidth="10dp"
            app:unselectedColor="#666666" />
    </RelativeLayout>

</RelativeLayout>